<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>55.0</apiVersion>
    <isExposed>true</isExposed>

    <masterLabel>Amazon s3 Files</masterLabel>

    <targets>
         <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightningCommunity__Page</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="recordId" label="Record Id" type="String"></property>
            <property name="allowUploads" label="Allow Uploads" type="Boolean" default="true"></property>
            <property name="allowView" label="Allow View" type="Boolean" default="true"></property>
            <property name="allowDownload" label="Allow Download" type="Boolean" default="true"></property>
            <property name="allowDelete" label="Allow Delete" type="Boolean" default="true"></property>
            <supportedFormFactors>
                <supportedFormFactor type="Small" />
                <supportedFormFactor type="Large" />
            </supportedFormFactors>
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>